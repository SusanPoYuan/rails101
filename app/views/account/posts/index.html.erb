<div class="col-md-12">
  
  <h2 class="text-center"> 我加入的討論版 </h2>
  
  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Group_id </th>
        <th> Content </th>
        <th> Last Update </th>
      </tr>
    </thead>
    
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> # </td>
          <td> <%= post.group_id %> </td> 
          <td> <%= render_post_content(post) %> </td> 
          <td> <%= post.updated_at.to_s(:short) %> </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>